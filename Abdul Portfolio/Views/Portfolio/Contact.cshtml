@model Abdul_Portfolio.Models.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row bg-dark text-white rounded p-4 shadow-lg">

                <!-- Left Panel -->
                <div class="col-md-6 border-end border-secondary mb-4 mb-md-0">
                    <h4 class="text-warning fw-bold">Contact Information</h4>
                    <p>Feel free to reach out for collaborations, project inquiries, or just to say hi!</p>

                    <p><strong>Email:</strong><br /> onimisi429@gmail.com</p>
                    <p><strong>Phone:</strong><br /> (+234) 8146350888</p>
                    <p><strong>Location:</strong><br /> Kogi, Nigeria (Remote Work Available)</p>

                    <hr class="bg-light" />

                    <p class="text-info fw-semibold">Connect with me</p>
                    <a href="#" class="btn btn-outline-light btn-sm me-2"><i class="fab fa-github"></i></a>
                    <a href="#" class="btn btn-outline-light btn-sm me-2"><i class="fab fa-linkedin"></i></a>
                    <a href="#" class="btn btn-outline-light btn-sm me-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="btn btn-outline-light btn-sm"><i class="fas fa-envelope"></i></a>
                </div>

                <!-- Right Panel (Form) -->
                <div class="col-md-6">
                    <h4 class="text-warning fw-bold mb-3">Get In Touch</h4>

                    <form method="post" asp-action="Contact">
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="Your Name" asp-for="Name" />
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" placeholder="Your Email" asp-for="Email" />
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="Subject" asp-for="Subject" />
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Subject)</span>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" rows="4" placeholder="Your Message" asp-for="Message"></textarea>
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Message)</span>
                        </div>
                        <button type="submit" class="btn btn-warning">Send Message</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
